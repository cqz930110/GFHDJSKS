        if (!IsStrEmpty(_audioPath)) {
            _vidioBtn.top = _startImageCollectionView.frame.origin.y;
            _beginBtn.top = _startImageCollectionView.frame.origin.y;
            _userNameLab.top = _vidioBtn.top + 4;
            _vidioTimeLab.top = _vidioBtn.top + 23;
        }
